{
  "name": "relumistudio",
  "displayName": "ReLumiStudio",
  "description": "IDE for Pok√©mon BDSP Scripting (RelumiScript)",
  "version": "0.1.0",
  "publisher": "User",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:bdsp",
    "workspaceContains:**/*.ev",
    "onView:relumi-message-preview"
  ],
  "contributes": {
    "languages": [
      {
        "id": "bdsp",
        "aliases": [
          "RelumiScript",
          "BDSP Script"
        ],
        "extensions": [
          ".ev"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bdsp",
        "scopeName": "source.bdsp",
        "path": "./syntaxes/bdsp.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "relumi-sidebar",
          "title": "ReLumiStudio",
          "icon": "media/icon.svg"
        }
      ],
      "panel": [
        {
          "id": "relumi-message-box",
          "title": "Script Tools",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "relumi-sidebar": [
        {
          "id": "relumi-scripts",
          "name": "Scripts",
          "icon": "$(file-code)",
          "contextualTitle": "Scripts"
        },
        {
          "id": "relumi-data",
          "name": "Flags & Works",
          "icon": "$(database)",
          "contextualTitle": "Data"
        },
        {
          "id": "relumi-commands",
          "name": "Commands & Macros",
          "icon": "$(terminal)",
          "contextualTitle": "Commands"
        },
        {
          "id": "relumi-analysis",
          "name": "Analysis (Unused)",
          "icon": "$(beaker)",
          "contextualTitle": "Analysis"
        }
      ],
      "relumi-message-box": [
        {
          "type": "webview",
          "id": "relumi-message-preview",
          "name": "Message Preview",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "commands": [
      {
        "command": "relumistudio.openHintEditor",
        "title": "ReLumi: Open Hint Editor",
        "category": "ReLumiStudio"
      },
      {
        "command": "relumistudio.refreshData",
        "title": "ReLumi: Refresh Data & Index",
        "category": "ReLumiStudio",
        "icon": "$(refresh)"
      },
      {
        "command": "relumistudio.navMessagePrev",
        "title": "Previous Message",
        "icon": "$(arrow-left)"
      },
      {
        "command": "relumistudio.navMessageNext",
        "title": "Next Message",
        "icon": "$(arrow-right)"
      },
      {
        "command": "relumistudio.searchExplorer",
        "title": "Search Explorer",
        "category": "ReLumiStudio",
        "icon": "$(search)"
      },
      {
        "command": "relumistudio.clearExplorerFilter",
        "title": "Clear Explorer Filter",
        "category": "ReLumiStudio",
        "icon": "$(filter-remove)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "relumistudio.refreshData",
          "when": "view == relumi-scripts",
          "group": "navigation"
        },
        {
          "command": "relumistudio.searchExplorer",
          "when": "view == relumi-scripts || view == relumi-data || view == relumi-commands",
          "group": "navigation"
        },
        {
          "command": "relumistudio.clearExplorerFilter",
          "when": "view == relumi-scripts || view == relumi-data || view == relumi-commands",
          "group": "navigation"
        },
        {
          "command": "relumistudio.navMessagePrev",
          "when": "view == relumi-message-preview",
          "group": "inline"
        },
        {
          "command": "relumistudio.navMessageNext",
          "when": "view == relumi-message-preview",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "relumistudio.openHintEditor",
          "when": "editorLangId == bdsp",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "ReLumiStudio",
      "properties": {
        "relumi.messageFileLanguage": {
          "type": "string",
          "default": "english",
          "description": "Language column to read from message CSVs."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}