{
  "name": "relumistudio",
  "displayName": "ReLumiStudio",
  "description": "Full IDE suite for Pok√©mon BDSP scripting",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "publisher": "relumistudio",
  "contributes": {
    "languages": [
      {
        "id": "bdsp",
        "aliases": [
          "RelumiScript",
          "BDSP Script"
        ],
        "extensions": [
          ".ev"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configurationDefaults": {
      "[bdsp]": {
        "editor.minimap.enabled": false,
        "editor.lineNumbers": "on",
        "editor.renderWhitespace": "none",
        "editor.insertSpaces": true,
        "editor.tabSize": 4
      }
    },
    "grammars": [
      {
        "language": "bdsp",
        "scopeName": "source.bdsp",
        "path": "./syntaxes/bdsp.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "relumi-sidebar",
          "title": "ReLumiStudio",
          "icon": "media/icon.svg"
        }
      ],
      "panel": [
        {
          "id": "relumi-tools",
          "title": "Script Tools",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "relumi-sidebar": [
        {
          "id": "relumi-scripts",
          "name": "Script Explorer",
          "icon": "$(list-tree)"
        }
      ],
      "relumi-tools": [
        {
          "id": "relumi-message-preview",
          "name": "Message Preview",
          "type": "webview",
          "icon": "$(eye)"
        }
      ]
    },
    "commands": [
      {
        "command": "relumistudio.openHintEditor",
        "title": "ReLumiStudio: Open Hint Editor",
        "category": "ReLumiStudio"
      },
      {
        "command": "relumistudio.refreshData",
        "title": "ReLumiStudio: Refresh Data",
        "category": "ReLumiStudio"
      },
      {
        "command": "relumistudio.openAnalysis",
        "title": "ReLumiStudio: Analyze Project",
        "category": "ReLumiStudio"
      },
      {
        "command": "relumistudio.navMessagePrev",
        "title": "Message Preview: Previous Page",
        "category": "ReLumiStudio"
      },
      {
        "command": "relumistudio.navMessageNext",
        "title": "Message Preview: Next Page",
        "category": "ReLumiStudio"
      }
    ],
    "keybindings": [
      {
        "command": "relumistudio.navMessagePrev",
        "key": "alt+left",
        "mac": "alt+left",
        "when": "editorTextFocus && resourceLangId == bdsp"
      },
      {
        "command": "relumistudio.navMessageNext",
        "key": "alt+right",
        "mac": "alt+right",
        "when": "editorTextFocus && resourceLangId == bdsp"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "relumistudio.openHintEditor",
          "when": "resourceLangId == bdsp",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "relumistudio.openHintEditor",
          "when": "view == relumi-scripts",
          "group": "navigation"
        },
        {
          "command": "relumistudio.openAnalysis",
          "when": "view == relumi-scripts",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "typescript-eslint": "^8.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}